generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Perfil {
  id                  String         @id @default(uuid())
  nome                String 
  cpf                 String         @unique
  dataNascimento      String
  numeroTelefone      String
  email               String         @unique
  senha               String
  termos              Boolean
  usuarioHost         UsuarioHost[]
  createAt            DateTime       @default(now())
  updateAt            DateTime?

  @@map("perfil")
}

model UsuarioHost {
  id                  String         @id @default(uuid())
  nome                String
  autorizacao         String
  perfilId            String
  perfil              Perfil         @relation(fields: [perfilId], references: [id], onDelete: Cascade)
  createAt            DateTime       @default(now())
  updateAt            DateTime?

  @@map("usuarioHost")
}
